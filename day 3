int(num1,num2)
{
  if(num1==num2)
   printf("numbers are equal.");
  else if(num1>num2)
   printf("first number you entered is greater than the second number you entered");
  else 
   printf("second number you entered is greater than the first number you entered");
  return 0;
 }
                                                                                                                                
